{
  "name": "npm-package-typescript-template",
  "version": "1.0.0-alpha",
  "description": "npm-package-typescript-template",
  "author": "Mark <mark@remarkablemark.org> (https://remarkablemark.org)",
  "main": "./cjs/index.js",
  "scripts": {
    "build": "npm run build:cjs && npm run build:umd",
    "build:cjs": "tsc",
    "build:umd": "rollup --config --failAfterWarnings",
    "build:watch": "tsc --watch",
    "clean": "rm -rf cjs coverage docs umd",
    "docs": "typedoc",
    "docs:watch": "npm run docs -- --watch",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "lint:package": "publint",
    "lint:tsc": "tsc --noEmit",
    "prepare": "husky",
    "prepublishOnly": "npm run lint && npm run lint:tsc && npm run test:ci && npm run test:esm && npm run clean && npm run build",
    "test": "jest --watch",
    "test:ci": "CI=true jest --ci --colors --coverage",
    "test:esm": "npm run build:cjs && node --test **/*.test.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remarkablemark/npm-package-typescript-template.git"
  },
  "bugs": {
    "url": "https://github.com/remarkablemark/npm-package-typescript-template/issues"
  },
  "keywords": [
    "npm-package-typescript-template"
  ],
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/compat": "1.3.2",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.35.0",
    "@rollup/plugin-commonjs": "28.0.6",
    "@rollup/plugin-terser": "0.4.4",
    "@rollup/plugin-typescript": "12.1.4",
    "@types/jest": "30.0.0",
    "@types/node": "24.4.0",
    "eslint": "9.35.0",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-tsdoc": "0.4.0",
    "globals": "16.4.0",
    "husky": "9.1.7",
    "jest": "30.1.3",
    "jest-watch-typeahead": "3.0.1",
    "lint-staged": "16.1.6",
    "prettier": "3.6.2",
    "publint": "0.3.12",
    "rollup": "4.50.2",
    "ts-jest": "29.4.1",
    "ts-node": "10.9.2",
    "tslib": "2.8.1",
    "typedoc": "0.28.13",
    "typescript": "5.9.2",
    "typescript-eslint": "8.43.0"
  },
  "files": [
    "cjs/",
    "src/",
    "umd/"
  ],
  "license": "MIT"
}
